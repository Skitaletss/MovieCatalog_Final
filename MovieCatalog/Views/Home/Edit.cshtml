        .text-danger { color: #ef4444; font-size: 0.9em; margin-top: 5px; display: block; }
        .form-actions { display: flex; gap: 15px; margin-top: 30px; }
        .btn { flex: 1; padding: 14px; border: none; border-radius: 8px; font-size: 1.1em; font-weight: bold; cursor: pointer; transition: 0.3s; text-align: center; text-decoration: none; display: inline-block; }
