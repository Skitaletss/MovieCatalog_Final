        .file-input { display: none; }
        .info-text { color: #6b7280; font-size: 0.9em; margin-top: 5px; }
        .readonly-info { background: #f3f4f6; padding: 10px; border-radius: 8px; color: #6b7280; font-size: 0.95em; }
